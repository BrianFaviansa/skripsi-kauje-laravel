# ===========================================
# Laravel Production Environment Configuration
# ===========================================
# Copy this file to .env when deploying to VPS
# Make sure to update all values marked with [CHANGE]
# ===========================================

APP_NAME="Kauje Laravel"
APP_ENV=production
APP_KEY=                                    # [CHANGE] Run: php artisan key:generate
APP_DEBUG=false
APP_URL=http://your-domain.com              # [CHANGE] Your VPS domain/IP

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

# ===========================================
# Logging Configuration
# ===========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ===========================================
# Database Configuration (PostgreSQL)
# ===========================================
DB_CONNECTION=pgsql
DB_HOST=db                                  # Docker service name
DB_PORT=5432
DB_DATABASE=kauje_db_laravel           # [CHANGE] Your database name
DB_USERNAME=postgres                        # [CHANGE] Your DB username
DB_PASSWORD=securepassword123               # [CHANGE] Use a strong password!

# ===========================================
# Session & Cache Configuration
# ===========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=redis

# ===========================================
# Redis Configuration
# ===========================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis                            # Docker service name
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# Queue Configuration
# ===========================================
QUEUE_CONNECTION=redis
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# ===========================================
# Laravel Octane Configuration (FrankenPHP)
# ===========================================
OCTANE_SERVER=frankenphp
OCTANE_WORKERS=auto                         # auto = CPU cores, or set specific number
OCTANE_MAX_REQUESTS=1000                    # Restart worker after N requests
OCTANE_HTTPS=false                          # Set true if using direct HTTPS
OCTANE_HOST=0.0.0.0
OCTANE_PORT=8000

# ===========================================
# Mail Configuration (Optional)
# ===========================================
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="noreply@your-domain.com" # [CHANGE]
MAIL_FROM_NAME="${APP_NAME}"

# ===========================================
# AWS S3 Configuration (Optional)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false
